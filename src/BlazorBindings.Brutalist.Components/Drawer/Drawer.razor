@using BlazorBindings.Brutalist.Phosphor
<YogaView AlignSelf="stretch" Grow="0" Shrink="0" Width="@(IsOpen ? 360 : 94)" Padding="12 12" BorderRadius="0 16 16 0"
          Gap="16" Direction="Yoga.YGFlexDirection.YGFlexDirectionColumn">
    <Button Size="M" HeadIcon="@PhosphorIcons.List" JustifyContent="start" Variant="Text" OnClick="@Toggle" />
    <YogaScrollableView Direction="Yoga.YGFlexDirection.YGFlexDirectionColumn" Grow="1">
        <Button Size="M" Tone="Secondary" Label="Home" HeadIcon="@PhosphorIcons.House" JustifyContent="start" />
        <Button Size="M" Label="Home" HeadIcon="@PhosphorIcons.Airplane" JustifyContent="start" Variant="Text" />
        <Button Size="M" Label="Home" HeadIcon="@PhosphorIcons.Archive" JustifyContent="start" Variant="Text" />

        <YogaView Margin="8 16" Height="1" Background="#E0E0E0" AlignSelf="stretch" />

        <Button Size="M" Label="Home" HeadIcon="@PhosphorIcons.Acorn" JustifyContent="start" Variant="Text" />
        <Button Size="M" Label="Home" HeadIcon="@PhosphorIcons.User" JustifyContent="start" Variant="Text" />
        <Button Size="M" Label="Home" HeadIcon="@PhosphorIcons.Check" JustifyContent="start" Variant="Text" />
    </YogaScrollableView>
    <Button HeadIcon="@PhosphorIcons.GearSix" JustifyContent="start" Variant="Text" />
    <ComboBox />
</YogaView>

@code {
    private bool IsOpen { get; set; } = true;

    private void Toggle()
    {
        IsOpen = !IsOpen;
    }
}